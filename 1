iint a = 3, btn1 = 10;
void setup() {
  pinMode(a, OUTPUT);
  pinMode(10, INPUT);

}

void loop() {
  for (int i = 1000; i > 0; i = i - 15) {
    if(digitalRead(btn1))
    blin(a, i);
  }
}
void blin(int pinLed, int tim) {
  digitalWrite(pinLed, 1);
  delay(tim);
  digitalWrite(pinLed, 0);
  delay(tim);
}
